
datasource db {
    provider = "postgresql"
    url = "postgres://postgres:master123@localhost:5432/blog" 
}

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl"]
}

model Issue {
    id  Int     @id @default(autoincrement())
    title String
    publishedDate DateTime?
    articles Article[]
}


model Article {
    id Int @id @default(autoincrement())
    issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
    issueId Int
    title String
    description String
    url String
}